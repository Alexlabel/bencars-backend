{
  "kind": "collectionType",
  "collectionName": "brands",
  "info": {
    "singularName": "brand",
    "pluralName": "brands",
    "displayName": "Brand"
  },
  "pluginOptions": {
    "content-manager": {
       "visible": true
     },
    "content-type-builder": {
      "visible": true
    }
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "models": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::model.model",
      "mappedBy": "brand"
    },
    "promoPages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::promo-page.promo-page",
      "mappedBy": "brand"
    }
  }
}
